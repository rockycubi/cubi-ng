<EasyForm Name="RolePickForm" Icon="icon_roles.gif" Class="PickerForm" FormType="List" jsClass="jbForm" Title="Please select a role for the user" Description="To selec a role to a user, click on a row and click to Select button" BizDataObj="system.do.RolePickDO" DataService="/system/roles" PageSize="10" TemplateEngine="Smarty" TemplateFile="system_pickform.tpl.html">
    <DataPanel>
		<!--<Element Name="row_selections" Class="RowCheckbox" width="20"  Label="" FieldName="Id"/>-->
        <Element Name="fld_Id" Class="common.element.ColumnTitle" FieldName="Id" Label="ID" Sortable="Y"/>
        <Element Name="fld_name" Class="ColumnText" FieldName="name" Label="Name" Sortable="Y"/>
        <Element Name="fld_description" Class="ColumnText" FieldName="description" Label="Description" Sortable="Y"/>
        <Element Name="fld_status" Class="ColumnBool" FieldName="status" Sortable="Y" Label="Active" />	
        <Element Name="fld_default" Class="ColumnBool" FieldName="default" Sortable="Y" Label="Default" />	
    </DataPanel>
    <ActionPanel>
        <Element Name="btn_edit" Class="Button" text="Select" CssClass="button_gray_m">
            <EventHandler Name="onclick" Event="onclick" Function="pickRecords()"/>
        </Element>
        <Element Name="btn_new" Class="Button" Text="Close" CssClass="button_gray_m">
            <EventHandler Name="onclick" Event="onclick" Function="closeDialog()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
		<Element Name="btn_first"  Class="Button" Text="" CssClass="button_gray_navi first" HTMLAttr="ng-click='gotoPage(1)'"/>
        <Element Name="btn_prev" Class="Button" Text="" CssClass="button_gray_navi prev" HTMLAttr="ng-click='gotoPage(currentPage-1)'"/>
        <Element Name="txt_page" Class="LabelText" Text="{{currentPage}} of {{totalPage}}"/>
        <Element Name="btn_next" Class="Button" Text="" CssClass="button_gray_navi next" HTMLAttr="ng-click='gotoPage(currentPage+1)'"/>
        <Element Name="btn_last" Class="Button" Text="" CssClass="button_gray_navi last" HTMLAttr="ng-click='gotoPage(totalPage)'"/>
    </NavPanel> 
    <SearchPanel>
    </SearchPanel>
</EasyForm>
