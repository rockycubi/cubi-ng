<EasyForm Name="SessionListForm" Icon="{RESOURCE_URL}/system/images/icon_session.gif" Class="SessionListForm" FormType="List" jsClass="jbForm" Title="Session Management" Description="You can view and manage user sessions in below form." DataService="/system/Sessions" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="system_right_listform.tpl.html" access="Session.Administer_Session">
    <DataPanel>
    	<Element Name="row_selections" Class="RowCheckbox"  Label="" FieldName="Id"/>
        <Element Name="fld_Id" Class="common.element.ColumnTitle" Hidden="Y" FieldName="Id" Label="Session Id" Sortable="Y"/>
        <Element Name="fld_link" Class="ColumnText" Hidden="Y" FieldName="link" Label="Link" Sortable="Y"/>
        <Element Name="fld_user" Class="ColumnText" FieldName="user_id" Label="User Id" MaxLength="20" Sortable="Y"/>
		<Element Name="fld_user" Class="ColumnText" FieldName="username" Label="Username" Link="{@home:url}/system/user_detail/{{dataobj.user_id}}" MaxLength="20" Sortable="Y"/>
        <Element Name="fld_last_url" Class="ColumnText" FieldName="last_url" Label="Last Request" MaxLength="35" Sortable="Y"/>
        <Element Name="fld_start_time" Class="ColumnText" FieldName="create_time" Label="Start Time" Sortable="N"/>
		<Element Name="fld_last_update" Class="ColumnText" FieldName="update_time" Label="Last Access" Sortable="N"/>
        <Element Name="fld_login_ip" Class="ColumnText" FieldName="ipaddr" Label="IP Address" Sortable="Y"/>
        	
    </DataPanel>
    <ActionPanel>	
   		<Element Name="btn_delete_anonymous" Class="Button" Text="Clean up" CssClass="button_gray_w">
            <EventHandler Name="btn_delete_anonymous_onclick" Event="onclick" Function="CleanUp()"  ContextMenu="Clean up"/>
        </Element>
        <Element Name="btn_spacer" Class="Spacer" width="10" />
        <Element Name="btn_delete" Class="Button" Text="Delete" CssClass="button_gray_m">
            <EventHandler Name="del_onclick" Event="onclick" Function="delete()" ShortcutKey="Delete" ContextMenu="Delete"/>
        </Element>
        
    </ActionPanel> 
    <NavPanel>
        <Element Name="btn_first" Class="Button" CssClass="button_gray_navi first" Click="gotoPage(1)"/>
        <Element Name="btn_prev" Class="Button" CssClass="button_gray_navi prev" Click="gotoPage(currentPage-1)"/>
        <Element Name="txt_page" Class="LabelText" Text="{{currentPage}} of {{totalPage}}"/>
        <Element Name="btn_next" Class="Button" CssClass="button_gray_navi next" Click="gotoPage(currentPage+1)"/>
        <Element Name="btn_last" Class="Button" CssClass="button_gray_navi last" Click="gotoPage(totalPage)"/></NavPanel> 
    <SearchPanel>
    
    </SearchPanel>
</EasyForm>
